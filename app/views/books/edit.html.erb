<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <p>
      <h2><%= @book.errors.count %>error prohibited this book from being saved:
      </h2>
    </p>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <label class="title">Title</label>
    <div class="title-box">
    <%= f.text_field :title %>
	</div>
    <label class="body">Body</label>
    	<div class="body-box">
    <%= f.text_area :body %>
</div>
    <%= f.submit 'Update Book' %>
<% end %>
	<tr>
		<td><%=link_to 'Show', book_path(@book.id) %></td>
