<header>
	<h1 class="headline">Books</h1>
</header>

<thead class="table">
	<tr class="record">
		<th><b>Title</b></th>
		<th><b>Body</b></th>
		<th colspan="3"></th>
	</tr>
</thead>
<table>
<% @books.each do |book| %>
	<tr class="record1">
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book_path(book.id) %></td>
		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
<% end %>
</table>

<h3 class="sub">New book</h3>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <p>
      <h2><%= @book.errors.count %>error prohibited this book from being saved:
      </h2>
    </p>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
    	<label class="title">Title</label>
    	    <div class="title-box">
    	<%= f.text_field :title %>
	</div>
    <label class="body">Body</label>
    	<div class="body-box">
    <%= f.text_area :body %>
	</div>
    <div>
    	<%= f.submit 'Create Book' %>
    </div>
<% end %>
