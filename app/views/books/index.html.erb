<header>
	<h1 class="headline">Books</h1>
</header>

<thead class="table">
	<tr class="record">
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
</thead>
<table>
<% @books.each do |book| %>
	<tr class="record1">
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%=link_to 'Show', book_path(book.id) %></td>
	</tr>
<% end %>

</table>

<h3 class="sub">New book</h3>
<%= form_for(@book) do |f| %>
 
    <div class="title-box">
    	<label class="title">Title</label>
    	<%= f.text_field :title %>
	</div>
	<div class="body-box">
    <label class="body">Body</label>
    <%= f.text_area :body %>
	</div>
    <div>
    	<%= f.submit 'Create Book' %>
    </div>
<% end %>